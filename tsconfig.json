{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "zebras": ["./.zebras/exports.ts"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "./.zebras/**/*", "@zebras-types"]
}
